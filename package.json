  "bugs": {
    "url": "https://github.com/JJWallis/hangman-app/issues"
  },
  "homepage": "https://github.com/JJWallis/hangman-app#readme",
  "devDependencies": {
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.1.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
