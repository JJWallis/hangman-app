{
  "name": "hangman",
  "version": "1.0.0",
  "description": "This project was a personal challenge of mine - to build a fully functioning Hangman game",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,md}\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "eslint --ignore-path .gitignore",
    "lint:stage": "lint-staged",
    "validate": "npm-run-all --parallel check-format lint test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JJWallis/hangman-app.git"
  },
  "keywords": [],
